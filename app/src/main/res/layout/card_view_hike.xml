<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mt_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/mtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Mt Balingkilatgaegageeagaegaegea"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mt Location"
                android:ellipsize="end"
                android:lines="1"/>

            <TextView
                android:id="@+id/difficultyLvl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 / 9 ( 500 masl )" />

            <TextView
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="Mar 30 , 2020"
                android:textColor="#009688"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>